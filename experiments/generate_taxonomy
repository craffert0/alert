import json
from server import Server


def main():
    server = Server()
    taxon = [
        {
            "speciesCode": x["speciesCode"],
            "comName": x["comName"],
            "taxonOrder": x["taxonOrder"],
        }
        for x in server.get("ref/taxonomy/ebird")
    ]
    print(
        json.dumps(
            sorted(taxon, key=lambda x: x["speciesCode"]),
            separators=(",", ":"),
        )
    )


if __name__ == "__main__":
    main()
